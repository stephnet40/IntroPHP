	\'95	\uc0\u8232 1 cup basmati rice\u8232 \
	\'95	\uc0\u8232 1 tablespoon coconut oil\u8232 \
	\'95	\uc0\u8232 1 teaspoon butter\u8232 \
	\'95	\uc0\u8232 \'bc cup flaked coconut\u8232 \
